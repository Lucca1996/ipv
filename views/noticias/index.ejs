<% layout('layouts/boilerplate') %>
    <img class="w-full mx-auto"  src="https://ipvtuc.gob.ar/web/wp-content/uploads/2024/02/pagina-WEB-noticias.png" alt="">
    <div class="max-w-screen-xl  flex-wrap items-end justify-between mx-auto p-4">
    <div>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"> <a href="/noticias/new">Agregar Noticia</a></span>
    </div>

        <% for(let noticia of noticias) { %>
            
            <div class="bg-gray-100 rounded-lg shadow-md overflow-hidden mb-3">
                <div class="flex">
                <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                    <img class="rounded-t-lg" src="<%= noticia.image %>" alt="" />
                </div>
                <div class="w-1/2 p-4">
                    <h5 class="text-xl font-bold mb-2"><%= noticia.title %></h5>
                    <p class="text-gray-700 mb-4"><%= noticia.content %></p>
                    <p class="text-sm text-gray-500"><%= noticia.location %></p>
                    <a href="/noticias/<%= noticia._id %>" class="inline-flex items-center px-3 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-700">
                    Visitar Noticia
                    </a>
                </div>
                </div>
            </div>
            <% } %>
            </div>

